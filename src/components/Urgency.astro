---
// Urgency.astro
import { useTranslations } from '../i18n/ui';

const { lang } = Astro.props;
const t = useTranslations(lang);
---
<div id="componente-urgency">
<section class="urgency-section">
  <div class="urgency-content">
    <h3>{t('urgency_title')}</h3>
    <p set:html={t('urgency_description')} />
    <a href="#precios" class="cta-primary">{t('urgency_cta')}</a>
  </div>
</section>

<style>
  .urgency-section {
    padding: 2rem;
    background-color: #FFD700; /* Dorado */
    color: #000; /* Negro */
    text-align: center;
  }
  .urgency-content h3 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .urgency-content p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }
  .spots-left {
    font-weight: 700;
    background-color: #000;
    color: #FFD700;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }
  .cta-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    background-color: #000;
    color: #FFD700;
    border: 2px solid #000;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .cta-primary:hover {
      background-color: #333;
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const spotsLeftSpan = document.querySelector('.spots-left');
        if (!spotsLeftSpan) return;

        let spots = 10;
        
        const interval = setInterval(() => {
            spots -= 1;
            spotsLeftSpan.textContent = spots.toString();
            if (spots <= 3) {
                clearInterval(interval);
            }
        }, 15000); // Reduce one spot every 15 seconds
    });
</script>
</div>
