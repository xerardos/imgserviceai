---
// Testimonials.astro
import { useTranslations } from '../i18n/ui';

const { lang } = Astro.props;
const t = useTranslations(lang);

const testimonials = [
  {
    quote: t('testimonial1_quote'),
    author: t('testimonial1_author'),
    avatar: "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=400&q=80"
  },
  {
    quote: t('testimonial2_quote'),
    author: t('testimonial2_author'),
    avatar: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&q=80"
  },
  {
    quote: t('testimonial3_quote'),
    author: t('testimonial3_author'),
    avatar: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&q=80"
  }
];
---
<div id="componente-testimonials">
<section class="testimonials-section">
  <h2>{t('testimonials_title')}</h2>
  <div class="testimonials-grid">
    {testimonials.map(testimonial => (
      <div class="testimonial-card">
        <p class="quote">"{testimonial.quote}"</p>
        <div class="author-info">
          <img src={testimonial.avatar} alt={`Avatar de ${testimonial.author}`} class="avatar" loading="lazy"/>
          <p class="author">{testimonial.author}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .testimonials-section {
    padding: 4rem 2rem;
    background-color: #13151a;
    text-align: center;
  }
  .testimonials-section h2 {
    font-size: 2.5rem;
    color: #FFD700;
    margin-bottom: 3rem;
  }
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .testimonial-card {
    background-color: #000;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #444;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .quote {
    font-style: italic;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  .author-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }
  .author {
    font-weight: 600;
  }
</style>
</div>
