---
// Pricing.astro
import { useTranslations } from '../i18n/ui';

const { lang } = Astro.props;
const t = useTranslations(lang);

const currencySymbol = lang === 'en' ? '$' : 'â‚¬';

const pricingTiers = [
  {
    name: t('pricing_starter_name'),
    price: `${currencySymbol}97`,
    features: t('pricing_starter_features').split(','),
    cta: t('pricing_starter_cta'),
    isFeatured: false,
  },
  {
    name: t('pricing_creator_name'),
    price: `${currencySymbol}197`,
    features: t('pricing_creator_features').split(','),
    cta: t('pricing_creator_cta'),
    isFeatured: true,
  },
  {
    name: t('pricing_influencer_name'),
    price: `${currencySymbol}397`,
    features: t('pricing_influencer_features').split(','),
    cta: t('pricing_influencer_cta'),
    isFeatured: false,
  },
];
---
<div id="componente-pricing">
<section class="pricing-section" id="precios">
  <h2>{t('pricing_title')}</h2>
  <p>{t('pricing_subtitle')}</p>
  <div class="pricing-grid">
    {pricingTiers.map(tier => (
      <div class:list={["pricing-tier", { featured: tier.isFeatured }]}>
        <h3>{tier.name}</h3>
        <p class="price">{tier.price}</p>
        <ul>
          {tier.features.map(feature => <li>{feature}</li>)}
        </ul>
        <a href="#" class="cta-button">{tier.cta}</a>
      </div>
    ))}
  </div>
</section>

<style>
  .pricing-section {
    padding: 4rem 2rem;
    text-align: center;
    background-color: #13151a;
  }
  .pricing-section h2 {
    font-size: 2.5rem;
    color: #FFD700;
    margin-bottom: 1rem;
  }
  .pricing-section p {
    margin-bottom: 3rem;
  }
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }
  .pricing-tier {
    padding: 2rem;
    border: 1px solid #444;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
  }
  .pricing-tier.featured {
    border-color: #FFD700;
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
  }
  .pricing-tier h3 {
    font-size: 1.5rem;
    color: #FFD700;
    margin-bottom: 1rem;
  }
  .price {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  .pricing-tier ul {
    list-style: none;
    padding: 0;
    margin-bottom: 2rem;
    flex-grow: 1;
  }
  .pricing-tier ul li {
    margin-bottom: 0.75rem;
  }
  .cta-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    background-color: #FFD700;
    color: #000;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease;
  }
  .pricing-tier:not(.featured) .cta-button {
      background-color: transparent;
      color: #FFD700;
      border: 2px solid #FFD700;
  }
  .cta-button:hover {
      transform: scale(1.05);
  }
</style>
</div>
