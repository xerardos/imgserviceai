<section class="gallery-section">
  <h2>Galería de Transformaciones</h2>
  <div class="gallery-grid">
    {galleryItems.map(item => (
      <div class="gallery-item" data-comparison-slider>
        <div class="image-container">
          <img src={item.before_src} alt={`${item.category} - Antes`} class="before-image" loading="lazy"/>
          <div class="after-wrapper">
            <img src={item.after_src} alt={`${item.category} - Después`} class="after-image" loading="lazy"/>
          </div>
          <div class="slider-handle">
            <div class="slider-arrow left"></div>
            <div class="slider-arrow right"></div>
          </div>
        </div>
        <p class="category-tag">{item.category}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .gallery-section {
    padding: 4rem 1rem;
    text-align: center;
    background-color: #13151a;
  }

  .gallery-section h2 {
    font-size: 2.5rem;
    color: #FFD700;
    margin-bottom: 2rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }
    .gallery-section {
      padding: 3rem 1rem;
    }
    .gallery-section h2 {
      font-size: 2rem;
    }
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }

  .image-container {
    position: relative;
    width: 100%;
    padding-top: 125%; /* Aspect ratio 4:5 */
  }

  .before-image, .after-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s ease;
  }

  .before-image {
    filter: grayscale(100%) brightness(0.8);
    opacity: 1;
  }

  .after-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 50%; /* Start at 50% */
    height: 100%;
    overflow: hidden;
  }

  .after-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    /* The wrapper handles the positioning */
    transform: scale(1); /* Override hover effect */
    opacity: 1; /* Override hover effect */
  }

  .slider-handle {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 100%;
    background-color: rgba(255, 215, 0, 0.8); /* Dorado semi-transparente */
    cursor: ew-resize;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .slider-arrow {
    width: 0;
    height: 0;
    border-style: solid;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  .slider-arrow.left {
    border-width: 8px 8px 8px 0;
    border-color: transparent rgba(255, 215, 0, 0.8) transparent transparent;
    left: -12px;
  }

  .slider-arrow.right {
    border-width: 8px 0 8px 8px;
    border-color: transparent transparent transparent rgba(255, 215, 0, 0.8);
    right: -12px;
  }

  .category-tag {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #FFD700;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sliders = document.querySelectorAll('[data-comparison-slider]');

    sliders.forEach(slider => {
      let isDragging = false;
      const afterWrapper = slider.querySelector('.after-wrapper') as HTMLElement;
      const handle = slider.querySelector('.slider-handle') as HTMLElement;

      const startDrag = (e: MouseEvent | TouchEvent) => {
        isDragging = true;
        slider.classList.add('is-dragging');
      };

      const stopDrag = () => {
        isDragging = false;
        slider.classList.remove('is-dragging');
      };

      const onDrag = (e: MouseEvent | TouchEvent) => {
        if (!isDragging) return;

        const clientX = 'touches' in e ? e.touches[0].clientX : e.clientX;
        const rect = slider.getBoundingClientRect();
        let offsetX = clientX - rect.left;
        let percent = (offsetX / rect.width) * 100;

        if (percent < 0) percent = 0;
        if (percent > 100) percent = 100;

        if (afterWrapper) {
          afterWrapper.style.width = `${percent}%`;
        }
        if (handle) {
          handle.style.left = `${percent}%`;
        }
      };

      // Mouse events
      handle.addEventListener('mousedown', startDrag);
      document.addEventListener('mouseup', stopDrag);
      document.addEventListener('mousemove', onDrag);

      // Touch events
      handle.addEventListener('touchstart', startDrag);
      document.addEventListener('touchend', stopDrag);
      document.addEventListener('touchmove', onDrag);
    });
  });
</script>
